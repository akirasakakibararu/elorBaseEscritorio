<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">Elorrieta00</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/elorBase</property>
